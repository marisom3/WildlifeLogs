@using WildlifeLogAPI.Models.DomainModels;
@model WildlifeLog.UI.Models.ViewModels.AddLogViewModel
@{
}

<h1 class="mt-3">Add Your Wildlife Observation</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label">Observer Name</label>
		<input type="text" class="form-control" asp-for="ObserverName" />
	</div>
	<div class="mt-3">
		<label class="form-label">Date</label>
		<input type="date" class="form-control" asp-for="Date" />
	</div>
	<div class="mt-3">
		
		<div class="mt-3">
			<label class="form-label">What Kind of Animal Was It?</label>
			<div>
				<input type="radio" asp-for="CategoryId" value="Mammal" id="mammal" />
				<label asp-for="CategoryId" for="mammal" class="form-label">Mammal</label>
			</div>
			<div>
				<input type="radio" asp-for="CategoryId" value="Reptile" id="reptile" />
				<label asp-for="CategoryId" for="reptile" class="form-label">Reptile</label>
			</div>
			<div>
				<input type="radio" asp-for="CategoryId" value="Insect" id="insect" />
				<label asp-for="CategoryId" for="insect" class="form-label">Insect</label>
			</div>
			<div>
				<input type="radio" asp-for="CategoryId" value="Fish" id="fish" />
				<label asp-for="CategoryId" for="fish" class="form-label">Fish</label>
			</div>
			<div>
				<input type="radio" asp-for="CategoryId" value="Bird" id="bird" />
				<label asp-for="CategoryId" for="bird" class="form-label">Bird</label>
			</div>
		</div>

	</div>

	<div class="mt-3">
		
		<input type="checkbox" asp-for="Confidence" />
		<label class="form-label">I am confident I identified the species</label>
	</div>
	<div class="mt-3">
		<label class="form-label">Species (optional)</label>
		<input type="text" class="form-control" asp-for="Species" />
	</div>

	<div class="mt-3">
		<label class="form-label">Count</label>
		<input type="text" class="form-control" asp-for="Count" />
	</div>
	<div class="mt-3">
		<label class="form-label">Description</label>
		<input type="text" class="form-control" asp-for="Description" />
	</div>
	<div class="mt-3">
		<label class="form-label">Location</label>
		<input type="text" class="form-control" asp-for="Location" />
	</div>
	<div class="mt-3">
		<label class="form-label">LogImageUrl</label>
		<input type="file" class="form-control" asp-for="LogImageUrl" />
	</div>
	<div class="mt-3">
		<label class="form-label">Comments</label>
		<input type="text" class="form-control" asp-for="Comments" />
	</div>
	
	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>