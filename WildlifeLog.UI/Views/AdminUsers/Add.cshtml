@model WildlifeLog.UI.Models.ViewModels.AddUserViewModel
@{
}

<h1 class="mt-3">Add User</h1>

<form method="post">
	<div class="mt-3">
		<label class="form-label">UserName</label>
		<input type="text" class="form-control" asp-for="UserName" />
	</div>
	<div class="mt-3">
		<label class="form-label">Email</label>
		<input type="text" class="form-control" asp-for="Email" />
	</div>
	<div class="mt-3">
		<label class="form-label">Password</label>
		<input type="text" class="form-control" asp-for="Password" />
	</div>
	<div class="mt-3">
		<label class="form-label">Roles</label>
		<input type="text" class="form-control" asp-for="Roles" />
	</div>
	<div class="mt-3">
		<button type="submit" class="btn custom-button-color">Save</button>
	</div>
</form>